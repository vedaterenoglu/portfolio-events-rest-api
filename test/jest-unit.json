{
  "displayName": "Unit Tests",
  "testMatch": ["<rootDir>/test/unit/**/*.spec.ts"],
  "preset": "ts-jest",
  "testEnvironment": "node",
  "rootDir": "../",
  "moduleFileExtensions": ["js", "json", "ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.(t|j)s",
    "!src/**/*.spec.ts",
    "!src/**/*.integration.spec.ts",
    "!src/**/*.e2e.spec.ts",
    "!src/main.ts",
    "!src/generated/**/*",
    "!src/**/*.interface.ts",
    "!src/**/*.dto.ts"
  ],
  "coverageDirectory": "<rootDir>/coverage/unit",
  "coverageReporters": ["text", "lcov", "html"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^@test/(.*)$": "<rootDir>/test/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/test/setup/unit-setup.ts"],
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true
}